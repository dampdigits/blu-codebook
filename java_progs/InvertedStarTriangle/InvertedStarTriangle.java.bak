import java.util.*;

class InvertedStarTriangle
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        
		System.out.println("Enter a the no. of rows");
		int n=sc.nextInt();
		
		for(int r=1; r<=n; r++)
		{
			for(int c=1; c+r<=n+1; c++)
				System.out.print("*");
			System.out.println();
		}
    }
}